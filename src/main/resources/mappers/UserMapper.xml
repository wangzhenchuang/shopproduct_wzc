<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wzc.shopproduct_wzc.dao.ShopUserDao">

    <!--查询总条数-->
    <select id="queryUserByCount" resultType="java.lang.Long" parameterType="com.wzc.shopproduct_wzc.entity.vo.UserParams">
        select  count(1) from shop_user where 1=1 and isDel=0
        <if test="name!=null and name!=''">
            and name=#{name}
        </if>

    </select>

    <!--查询所有数据-->
    <select id="queryUserDataByPage" resultType="com.wzc.shopproduct_wzc.entity.po.ShopUser" parameterType="com.wzc.shopproduct_wzc.entity.vo.UserParams">
        select * from shop_user where 2=2 and isDel=0
         <if test="name!=null and name!=''">
            and name=#{name}
        </if>
        order by id desc   limit ${size*(start-1)},#{size}
    </select>





</mapper>
